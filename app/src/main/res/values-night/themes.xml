<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SyncDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightSteelBlue</item>
        <item name="colorPrimaryVariant">@color/darkSlateGray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GoogleText_Regular">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/notosans_regular</item>
    </style>

    <style name="GoogleText_Bold">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/notosans_bold</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAppearance">@style/GoogleText_Regular</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="RadioButtonDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAppearance">@style/GoogleText_Regular</item>
    </style>

    <style name="ThemeChoiceDialogAdaptable">
        <item name="background">@color/darkSlateGray</item>
    </style>

    <style name="ChangeThemeDialog" parent="Theme.SyncDark">
        <item name="android:background">?attr/colorSurface</item>
    </style>
</resources>